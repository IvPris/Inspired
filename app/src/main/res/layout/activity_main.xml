<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/photo1"/>
    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/birth1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo1"
        android:layout_below="@id/name1"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/about1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo1"
        android:layout_below="@id/birth1"/>


    <ImageView
        android:id="@+id/photo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/photo1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo2"
        android:layout_alignTop="@id/photo2"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/birth2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo2"
        android:layout_below="@id/name2"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/about2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo2"
        android:layout_below="@id/birth2"/>


    <ImageView
        android:id="@+id/photo3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/photo2"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/name3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo3"
        android:layout_alignTop="@id/photo3"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/birth3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo3"
        android:layout_below="@id/name3"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/about3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/photo3"
        android:layout_below="@id/birth3"/>
</RelativeLayout>